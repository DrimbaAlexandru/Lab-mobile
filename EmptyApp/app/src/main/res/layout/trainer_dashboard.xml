<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="See Ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_see_ratings"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
                android:text="Edit User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_edit_user_trainer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"/>

        <LinearLayout
                android:id="@+id/trainer_dashboard_views"
                android:layout_width="388dp"
                android:layout_height="426dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:weightSum="1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_see_ratings">

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/randid2"/>

            <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:id="@+id/rating_chart"
                    android:visibility="gone"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="234dp"
                    android:layout_weight="0.67"
                    android:visibility="gone"
                    android:id="@+id/edit_user_trainer">

            </LinearLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>