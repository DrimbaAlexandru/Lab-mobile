<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.alex.emptyapp.GUI.MainActivity">

    <TextView
            android:text="Text"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/textView"
            app:layout_constraintRight_toLeftOf="@+id/txt_text"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:text="Location"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/textView5"
            app:layout_constraintRight_toLeftOf="@+id/txt_location"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <EditText
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:ems="10"
            android:id="@+id/txt_location"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="text"
            android:layout_marginEnd="8dp"/>

    <EditText
            android:layout_width="278dp"
            android:layout_height="42dp"
            android:ems="10"
            android:id="@+id/txt_text"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_location"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txt_quantity"
            android:hint="Quantity"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_submit"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="Download all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_download_all"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_text"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="Report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_report"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_text"
            android:layout_marginStart="8dp"/>

    <ListView
            android:layout_width="370dp"
            android:layout_height="277dp"
            android:id="@+id/list_tasks"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_download_all"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_quantity"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="171dp"
            tools:layout_editor_absoluteX="20dp"/>

</android.support.constraint.ConstraintLayout>
