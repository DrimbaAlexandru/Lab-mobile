<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.emptyapp.GUI.EditUserFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
                android:id="@+id/txt_conflict"
                android:layout_width="233dp"
                android:layout_height="42dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:inputType="text"
                android:text="conflict"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_text_nou"/>

        <EditText
                android:id="@+id/txt_text_nou"
                android:layout_width="233dp"
                android:layout_height="42dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="text"
                android:text="text"/>

        <TextView
                android:text="Text conflict:"
                android:layout_width="110dp"
                android:layout_height="42dp"
                android:id="@+id/textView"
                app:layout_constraintRight_toLeftOf="@+id/txt_conflict"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <TextView
                android:text="Text nou:"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:id="@+id/textView2"
                app:layout_constraintRight_toLeftOf="@+id/txt_text_nou"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.5"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
