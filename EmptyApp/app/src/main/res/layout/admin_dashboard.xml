<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Statistici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_statistics"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
                android:text="Curse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_curse"
                app:layout_constraintLeft_toRightOf="@+id/btn_statistics"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"/>

        <LinearLayout
                android:id="@+id/dashboard_views"
                android:layout_width="388dp"
                android:layout_height="426dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_curse"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:weightSum="1">

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/randid1"/>

            <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:id="@+id/statistics_graph"
                    android:visibility="gone"/>

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="387dp"
                    android:id="@+id/list_curse"
                    android:visibility="gone"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>